# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Query {
  users: String
}

type Coords {
  x: Float!
  y: Float!
}

type User {
  name: String!
  radius: Int!
  coords: Coords
}

type Session {
  token: String!
  user: User!
}

input SessionInput {
  name: String!
  x: Float!
  y: Float!
}

type Mutation {
  createSession(input: SessionInput!): Session!
  changeRadius(token: String! radius: Int!): Boolean!
}
